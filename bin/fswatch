#!perl

use strict;
use warnings;
use App::fswatch;

App::fswatch->new->run(@ARGV);

# fswatch t/ --exec 'prove -lr __DIR__'

=head1 NAME

fswatch - watch filesystem changes and run command

=head1 SYNOPSIS

fswatch [-h] [-e COMMAND] [path ...]

    --exec | -e COMMAND

    --help | -h 
        show this message

